@model PanGainsWebApp.Models.Exercise
@{
    ViewData["Title"] = "Exercises";
}

<div class="text-white edit">
    
    <div class="mb-3">
        <a style="color: white; text-decoration: none; font-weight: bold" asp-area="" asp-controller="Exercises" asp-action="Index">&lt; Back</a>
    </div>

    <div class="card card-form">
        
        <h2 class="m-3">Edit Exercise</h2>

        <div class="p-4">
            <form class="form" asp-action="Edit" method="post" autocomplete="off">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ExerciseID" />
                <div class="form-group">
                    <label style="align-self: flex-start; font-weight: bold; padding: 10px 0" asp-for="ExerciseName" >Exercise Name</label>
                    <input style="align-self: flex-start; width: 100%; max-width: 425px; padding: 12px; font-size: 14px; outline: none; border: 1px solid #ddd; border-radius: 4px; background: #f9f9f9;" required asp-for="ExerciseName" placeholder="Enter exercise" />
                </div>
                
                <div class="form-group">
                    <input class="form-btn" type="submit" value="Save Changes" />
                </div>
            </form>
        </div>
    </div>

</div>
