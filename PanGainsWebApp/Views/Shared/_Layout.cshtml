<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>PanGains - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PanGainsWebApp.styles.css" asp-append-version="true" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark nav-bg border-b box-shadow mb-3 pt-4 pb-4">
            <div class="container-fluid">
                <div class="ms-4">
                    <a asp-area="" asp-controller="Home" asp-action="Index"><img class="img-fluid" src="/img/nav/AdminPortal.png" /></a>
                </div>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a asp-area="" asp-controller="Login" asp-action="Index">Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="sidenav border-r">
        <a asp-area="" asp-controller="Home" asp-action="Index">Test</a>
        <a asp-area="" asp-controller="Home" asp-action="Index">Test</a>
        <a asp-area="" asp-controller="Home" asp-action="Index">Test</a>
        <a asp-area="" asp-controller="Home" asp-action="Index">Test</a>
        <a asp-area="" asp-controller="Home" asp-action="Index">Test</a>
    </div>

    <main role="main">
        @RenderBody()
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
